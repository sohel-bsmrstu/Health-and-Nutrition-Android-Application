<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:background="#00E676"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="পুষ্টি ক্যালকুলেটর "
        android:textAlignment="center"
        android:id="@+id/text"
        android:textSize="25dp"
        android:textColor="#00BCD4"
        android:background="#9C27B0"
        android:layout_alignParentTop="true"
        android:padding="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="বয়স (বছর)"
        android:textSize="23dp"
        android:textAlignment="center"
        android:textColor="#AD1457"

        android:id="@+id/text1"
        android:padding="15dp"
        android:layout_below="@+id/text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/editText"
        android:layout_toStartOf="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:hint="২০ বছর"
        android:textAlignment="center"
        android:textSize="18dp"
        android:id="@+id/editText"
        android:padding="15dp"
        android:layout_alignTop="@+id/text1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/text2"
        android:layout_toRightOf="@+id/text2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="উচ্চতা (সে: মি:) "
        android:textSize="23dp"
        android:textColor="#AD1457"
        android:id="@+id/text2"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:hint="১৬৪ (সে: মি:)"
        android:textAlignment="center"
        android:textSize="18dp"
        android:id="@+id/editText2"
        android:layout_alignBottom="@+id/text2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/text2"
        android:layout_toEndOf="@+id/text2"
        android:padding="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ওজন (কেজি)"
        android:textSize="23dp"
        android:textColor="#AD1457"
        android:id="@+id/text3"
        android:layout_below="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:hint="৫৬ কেজি "
        android:textAlignment="center"
        android:textSize="18dp"
        android:id="@+id/editText3"
        android:layout_alignBottom="@+id/text3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/text2"
        android:layout_toEndOf="@+id/text2"
        android:padding="15dp" />

    <CheckBox
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="পুরুষ "
        android:textSize="20dp"
        android:textColor="#6A1B9A"
        android:id="@+id/checkBox"
        android:checked="false"
        android:padding="15dp"
        android:layout_below="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="মহিলা "
        android:textSize="20dp"
        android:textColor="#6A1B9A"
        android:id="@+id/checkBox2"
        android:layout_below="@+id/checkBox"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox"
        android:checked="false"
        android:padding="15dp" />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="ক্যালকুলেট"
        android:textSize="18dp"
        android:textAlignment="center"
        android:background="@drawable/sohel_button"
        android:textColor="#6A1B9A"
        android:id="@+id/btn"
        android:layout_below="@+id/checkBox2"
        android:layout_centerHorizontal="true"
        android:padding="20dp" />
        </RelativeLayout>
       </RelativeLayout>

      </ScrollView>